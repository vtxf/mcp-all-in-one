{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "vtxf/mcps-proxy/schema/windows-config.schema.json",
  "title": "Windows Platform Configuration Schema",
  "description": "Schema for Windows platform-specific MCP server configurations",
  "type": "object",
  "properties": {
    "useShellPrefix": {
      "type": "boolean",
      "description": "Whether to automatically add cmd prefix for Windows commands",
      "default": true,
      "examples": [true, false]
    },
    "forceAbsolute": {
      "type": "boolean",
      "description": "Force execution using absolute paths (experimental feature)",
      "default": false,
      "examples": [true, false]
    },
    "workingDirectory": {
      "type": "string",
      "description": "Working directory for command execution on Windows",
      "default": ".",
      "examples": ["C:\\work", "./project", "%USERPROFILE%\\mcp"]
    },
    "environmentVariables": {
      "type": "object",
      "description": "Additional environment variables specific to Windows execution",
      "patternProperties": {
        "^[A-Z_][A-Z0-9_]*$": {
          "type": "string",
          "description": "Environment variable value"
        }
      },
      "additionalProperties": false,
      "examples": {
        "NODE_ENV": "production",
        "PYTHON_PATH": "C:\\Python39\\python.exe"
      }
    },
    "timeout": {
      "type": "integer",
      "description": "Command execution timeout in milliseconds (Windows specific)",
      "minimum": 1000,
      "maximum": 600000,
      "default": 60000,
      "examples": [30000, 60000, 120000]
    },
    "retryAttempts": {
      "type": "integer",
      "description": "Number of retry attempts on Windows (additional to global retry)",
      "minimum": 0,
      "maximum": 5,
      "default": 1,
      "examples": [0, 1, 3]
    },
    "retryDelay": {
      "type": "integer",
      "description": "Delay between retries in milliseconds (Windows specific)",
      "minimum": 100,
      "maximum": 10000,
      "default": 1000,
      "examples": [500, 1000, 2000]
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "useShellPrefix": true,
      "workingDirectory": "C:\\mcp-services",
      "timeout": 60000
    },
    {
      "useShellPrefix": false,
      "forceAbsolute": true,
      "workingDirectory": "C:\\mcp-services"
    },
    {
      "useShellPrefix": true,
      "environmentVariables": {
        "NODE_ENV": "development"
      },
      "timeout": 120000
    }
  ]
}